<html> 
	<head> 
		<title>Rock-Paper-Scissors</title>

		<script language="javascript"> 
		

		var GameStatus =  "true"
		while (GameStatus)
		{
			if (GameStatus === "Exit")
			{
				break;
			}
			else
			{
				var CompChoice = Math.random();

				if (CompChoice <= 0.33)
				{
				CompChoice = "Rock";
				}
			
				else if (CompChoice <= 0.66)
				{
					CompChoice = "Paper";
				}
				else if (CompChoice <= 1)
				{
					CompChoice = "Scissors";
				}

				var UserChoice = prompt("Make a choice between Rock, Paper and Scissors:")
				/*console.log(CompChoice)
				console.log(UserChoice)*/
		
				var Referee = function(UChoice, CChoice)
				{
					if (UChoice === CChoice)
					{
						return "Tie!";
					}
					else if (UChoice === "Rock")
					{
						if (CChoice === "Paper")
						{
							return "Computer win!";
						}
						else
						{
							return "You win!";
						}
					}
					else if (UChoice === "Paper")
					{
						if (CChoice === "Scissors")
						{
							return "Computer win!";
						}
						else
						{
							return "You win!";
						}
					}
					else if (UChoice === "Scissors")
					{
						if (CChoice === "Rock")
						{
							return "Computer win!";
						}
						else
						{
							return "You win!";
						}	
					}
				}
				
			};
			alert("Computer choice is " + CompChoice + ";\n" + "You choice is " + UserChoice + ";\n" + Referee(UserChoice, CompChoice))
			GameStatus = prompt("Game over.\nIf you dont want to play again write: Exit. If you want to play again write any another text.")
		}
        </script>
	</head>
	<body> 
	</body> 
 </html>
