<html> 
	<head> 
		<title>Заголовок документа</title>

		<script language="javascript"> 
		
		var CompChoice = Math.random();
		
		if (CompChoice <= 0.33)
		{
			CompChoice = "Rock";
		}
		else if (CompChoice <= 0.66)
		{
			CompChoice = "Paper";
		}
		else if (CompChoice <= 1)
		{
			CompChoice = "Scissors";
		}

		var UserChoice = prompt("Make a choice between Rock, Paper and Scissors:")
		console.log(CompChoice)
		console.log(UserChoice)
		
		var Referee = function(UChoice, CChoice)
		{
			if (UChoice === CChoice)
			{
				return "Tie!";
			}
			else if (UChoice === "Rock")
			{
				if (CChoice === "Paper")
				{
					return "Computer win!";
				}
				else
				{
					return "You win!";
				}
			}
			else if (UChoice === "Paper")
			{
				if (CChoice === "Scissors")
				{
					return "Computer win!";
				}
				else
				{
					return "You win!";
				}
			}
			else if (UChoice === "Scissors")
			{
				if (CChoice === "Rock")
				{
					return "Computer win!";
				}
				else
				{
					return "You win!";
				}
			}
		};
		console.log(Referee(UserChoice, CompChoice))
		</script> 
	</head>
	<body> 
	</body> 
 </html>
